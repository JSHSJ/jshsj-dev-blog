---
import {Navigation} from "@/config/index.ts"
const {blogPosts} = Astro.props;
---

<style>

  .list {
    width: 100%;
  }

  .title {
    font-size: var(--s2);
    font-family: var(--fontFamilySans);
    --fontWeight: var(--fontWeightBold);
  }

  .meta {
    line-height: 1;
    align-items: center;
    font-family: var(--fontFamilyMono);
    font-size: var(--s-1)
  }

  .badges {
    --gap: 0;
    align-items: baseline;
    font-size: var(--s-1);
    color: var(--color-text2);
    border-collapse: collapse;
  }

  .badges .badge:not(:last-child) {
      border-right: none;
   }

</style>

<ul class="list-reset stack -layout-xl -stretched">
{blogPosts.map((blogPost) => (
    <li class="stack | blogPost">
      <article class="stack -layout-3xs">
          <a href={`${Navigation.blogPost.url}/${blogPost.slug}`}><h2 class="title">
          {blogPost.title}</h2>
          </a>
          <p>
          {blogPost.description}</p>
          <div class="cluster -layout-s | meta">
          <time class="date">Posted: {new Date(blogPost.date).toLocaleDateString()}</time>&nbsp;-&nbsp;<div class="cluster | badges">{blogPost.tags.map((tag, i) => (
            <span class="badge">{tag}</span>
          ))}
          </div>
          </div>
          </article>
        </li>
      ))}
</ul>
